<style>
    header { text-align: center; } .title { text-align: center; } button {display: flex; margin: auto; background-color: #0e71db; color: white; border: none; padding: 12px 20px; text-align: center; border-radius: 4px; cursor: pointer; transition: background-color 0.3s ease; margin-top: 10px; } button:hover { background-color: #0f4680; } a:hover { background-color: #0f4680; } a{text-decoration: none; color: aliceblue;}
</style>
<header>
    <div>
        <h2>Te damos la bienvenida, {{user.first_name}} - {{user.last_name}}!! </h2>
        <p><strong>E-mail: </strong> {{user.email}} </p>
        <p><strong>Edad: </strong> {{user.age}} </p>
        <p><strong>Rol: </strong> {{user.role}} </p>
        <button><a href="/api/sessions/logout"> Cerrar Sesión </a></button>
    </div>
</header>
<h1 class="title">Todos los productos</h1>
<div class="card-deck">
    {{#each productos}}
        <div class="card">
            <img src="{{img}}" class="card-img-top" alt="Imagen del producto" />
            <div class="card-body">
                <h3 class="card-title">{{title}}</h3>
                <h4>{{description}}</h4>
                <h4 class="card-text">Categoría: {{category}}</h4>
                <h4 class="card-text"> $ {{price}}</h4>
            </div>
        </div>
    {{/each}}
</div>

<div class="botonera">
    {{#if hasPrevPage}}
        <button>
            <a href="/products?page={{prevPage}}"> Anterior </a>
        </button>
    {{/if}}
    {{#if hasNextPage}}
        <button>
            <a href="/products?page={{nextPage}}"> Siguiente </a>
        </button>

    {{/if}}
    <div>
        <p><strong>Página </strong> {{currentPage}} <strong>de </strong> {{totalPages}} </p>
    </div>

</div>