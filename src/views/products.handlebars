<header>
    <h1>Todos los productos</h1>
    <div>
        <p>Te damos la bienvenida, {{user.first_name}} - {{user.last_name}}!! </p>
        <p>E-mail: {{user.email}} </p>
        <p>Edad: {{user.age}} </p>
        <p>Rol: {{user.role}} </p>
        <a href="/api/sessions/logout"> Cerrar Sesión </a>
    </div>
</header>

<div class="card-deck">
    {{#each productos}}
        <div class="card">
            <img src="{{img}}" class="card-img-top" alt="Imagen del producto" />
            <div class="card-body">
                <h3 class="card-title">{{title}}</h3>
                <h4>{{description}}</h4>
                <h4 class="card-text">Categoría: {{category}}</h4>
                <h4 class="card-text"> $ {{price}}</h4>
            </div>
        </div>
    {{/each}}
</div>

<div class="botonera">
    {{#if hasPrevPage}}
        <button>
            <a href="/products?page={{prevPage}}"> Anterior </a>
        </button>
    {{/if}}
    {{#if hasNextPage}}
        <button>
            <a href="/products?page={{nextPage}}"> Siguiente </a>
        </button>

    {{/if}}
    <div>
        <p>Página {{currentPage}} de {{totalPages}} </p>
    </div>

</div>